<?xml version="1.0" ?>
<openerp>
	<data>

    <!-- Recalculate Cash Flow Opening Balances -->

    <record id="view_calc_cashflow_opening_balance" model="ir.ui.view">
      <field name="name">calc.cashflow.opening.balance.form</field>
      <field name="model">calc.cashflow.opening.balance</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Recalculate Cash Flow Opening Balances">
          <group colspan="4">
            <field name="date_start"/>
            <field name="date_stop"/>
            <separator string="Financial Journals" colspan="4"/>
            <field name="journal_ids" nolabel="1" colspan="4"/>
          </group>
          <separator string="" colspan="4"/>
          <group colspan="4" col="6">
            <label string ="" colspan="2"/>
            <button icon="gtk-cancel" special="cancel" string="Cancel"/>
            <button icon="terp-gtk-go-back-rtl" string="Recalculate Balances" name="calc_cashflow_opening_balance" type="object" />
          </group>
        </form>        
      </field>
    </record>

    <record id="action_calc_cashflow_opening_balance" model="ir.actions.act_window">
      <field name="name">Recalculate Cash Flow Opening Balances</field>
      <field name="res_model">calc.cashflow.opening.balance</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_calc_cashflow_opening_balance"/>
      <field name="help">Recalculate Cash Flow Opening Balances for the selected period.</field>
      <field name="target">new</field>
    </record>

    <record model="ir.values" id="action_calc_cashflow_opening_balance_values">
      <field name="name">Recalculate Cash Flow Opening Balances</field>
      <field name="key2">client_action_multi</field>
      <field name="value" eval="'ir.actions.act_window,' +str(ref('action_calc_cashflow_opening_balance'))" />
      <field name="model">account.cashflow.opening.balance</field>
    </record>

  </data> 
</openerp>
