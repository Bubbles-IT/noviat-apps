<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="invoice_form_inherit" model="ir.ui.view">
        <field name="name">invoice.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
          <data>
            <xpath expr="/form/notebook/page[@string='Other Info']/field[@name='move_id']" position="after">
            <group colspan="4" attrs="{'invisible':[('type', 'not in', ['out_invoice', 'in_refund'])]}">
              <separator colspan="4" string="Cash Flow Management"/>
              <field name="cashflow_code_id"/>
              <field name="cashflow_journal_id"/>
            </group>
          </xpath>
          </data>
        </field>
      </record>

      <record id="invoice_supplier_form_inherit" model="ir.ui.view">
        <field name="name">invoice.supplier.form.inherit</field>
        <field name="model">account.invoice</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
          <data>
            <xpath expr="/form/notebook/page[@string='Other Info']/field[@name='move_id']" position="after">
              <group colspan="4" attrs="{'invisible':[('type', 'not in', ['out_invoice', 'in_refund'])]}">
                <separator colspan="4" string="Cash Flow Management"/>
                <field name="cashflow_code_id"/>
                <field name="cashflow_journal_id"/>
              </group>
            </xpath>
          </data>
        </field>
      </record>
      
    </data>
</openerp>
