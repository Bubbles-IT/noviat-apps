<?xml version="1.0"?>
<openerp>
<data>

    <record id="intrastat_stock_picking_in_form_view" model="ir.ui.view">
        <field name="name">intrastat.stock.picking.in.form</field>
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_in_form"/>
        <field name="arch" type="xml">
            <page string="Additional Info" position="inside">
                <group colspan="2" col="2" string="Intrastat">
                    <field name="intrastat_declare"/>
                    <field name="intrastat_country_id" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                </group>
            </page>
            <xpath expr="//field[@name='move_lines']/form/label[@string='']" position="before">
                <group colspan="2" col="4">
                    <separator string="Intrastat" colspan="4"/>
                    <field name="intrastat_declare"/>
                    <field name="intrastat_transaction" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                    <field name="intrastat_qty" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                    <field name="intrastat_weight" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="intrastat_stock_picking_out_form_view" model="ir.ui.view">
        <field name="name">intrastat.stock.picking.out.form</field>
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_out_form"/>
        <field name="arch" type="xml">
            <page string="Additional info" position="inside">
                <group colspan="2" col="2" string="Intrastat">
                    <field name="intrastat_declare"/>
                    <field name="intrastat_country_id" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                </group>
            </page>
            <xpath expr="//field[@name='move_lines']/form/label[@string='']" position="before">
                <group colspan="2" col="4">
                    <separator string="Intrastat" colspan="4"/>
                    <field name="intrastat_declare"/>
                    <field name="intrastat_transaction" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                    <field name="intrastat_qty" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                    <field name="intrastat_weight" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="intrastat_stock_move_form_view" model="ir.ui.view">
        <field name="name">intrastat.stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group/group[@string='Traceability']" position="after">
                <group colspan="2" col="4">
                    <separator string="Intrastat" colspan="4"/>
                    <field name="intrastat_declare"/>
                    <field name="intrastat_transaction" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                    <field name="intrastat_qty" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                    <field name="intrastat_weight" attrs="{'invisible': [('intrastat_declare','=',False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</data>
</openerp>
