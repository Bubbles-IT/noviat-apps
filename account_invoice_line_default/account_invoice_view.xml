<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <!-- Adapt Supplier Invoices : move 'name' field to first notebook page -->

    <record id="supplier_invoice_inherit_nov" model="ir.ui.view">
      <field name="name">account.invoice.supplier.form.inherit.nov</field>
      <field name="model">account.invoice</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field name="arch" type="xml">
        <data>
          <xpath expr="/form/notebook/page[@string='Other Info']/field[@name='name']" position="replace"/>
          <xpath expr="/form/group/group[@groups='account.group_account_user']" position="after">
            <newline/>
            <field name="name"/>
          </xpath>
        </data>
      </field>
    </record>
    
  </data>
</openerp>
