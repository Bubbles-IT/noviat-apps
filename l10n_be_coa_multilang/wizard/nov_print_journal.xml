<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="view_nov_print_journal" model="ir.ui.view">
        <field name="name">l10n_be_coa_multilang - Print Journal by Period</field>
        <field name="model">nov.print.journal</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
          <form string="Print Journal by Period">
            <field name="journal_ids" height="200"/>
            <field name="period_ids"/>
            <field name="sort"/>
            <separator colspan="4"/>
            <group col="4" colspan="4">
              <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
              <button icon="gtk-print" name="print_report" string="Print" type="object" colspan="2" default_focus="1" />
            </group>
          </form>
        </field>
      </record>

      <record id="action_nov_print_journal" model="ir.actions.act_window">
        <field name="name">Print Journal by Period</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nov.print.journal</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_nov_print_journal"/>
        <field name="target">new</field>
      </record>

	    <menuitem
	        name="Print Journal by Period"
	        parent="l10n_be.menu_finance_belgian_statement"
	        action="action_nov_print_journal"
	        id="menu_nov_print_journal"
          icon="STOCK_PRINT"/>
      
    </data>
</openerp>