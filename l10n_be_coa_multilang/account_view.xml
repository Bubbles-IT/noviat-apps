<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    
    <!--  Wizard for Multi Charts of Accounts -->
    <record id="view_wizard_multi_chart_belgian_coa" model="ir.ui.view">
      <field name="name">view.wizard.multi.chart.belgian.coa</field>
      <field name="model">wizard.multi.charts.accounts</field>
      <field name="inherit_id" ref="account.view_wizard_multi_chart"/>
      <field name="arch" type="xml">
        <data>
          <field name="bank_accounts_id" position="before">
            <field name="bank_from_template" invisible="1"/>
          </field>
          <field name="bank_accounts_id" position="before">
            <field name="load_dutch"/>
            <field name="load_french"/>
          </field>
          <field name="bank_accounts_id" position="attributes">
            <attribute name="attrs">{'invisible': [('bank_from_template', '=', True)]}</attribute>
          </field>          
        </data>
      </field>
    </record>

    <!-- account types : search on 'note' + 'active' flag -->
    <record id="view_account_type_search_inherit" model="ir.ui.view">
      <field name="name">account.account.type.search.inherit</field>
      <field name="model">account.account.type</field>
      <field name="type">search</field>
      <field name="inherit_id" ref="account.view_account_type_search"/>
      <field name="arch" type="xml">
        <field name="code" position="after">
          <field name="note"/>
        </field>
      </field>
    </record>
    <record id="view_account_type_form_inherit" model="ir.ui.view">
      <field name="name">account.account.type.form.inherit</field>
      <field name="model">account.account.type</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account.view_account_type_form"/>
      <field name="arch" type="xml">
        <field name="code" position="after">
          <field name="active"/>
        </field>
      </field>
    </record>
    
  </data>
</openerp>