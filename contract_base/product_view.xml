<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

<!-- Add field on product.product view -->
  <record id="contract_base_product_normal_form" model="ir.ui.view">
    <field name="name">contract.base.product.normal.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="account.product_normal_form_view" />
    <field name="arch" type="xml">
      <notebook position="inside">
        <page string="Billing Defaults">
          <group col="4" colspan="4">
            <separator string="Billing Defaults - Customer Contracts" colspan="4"/>
            <field name="billing_type_sale"/>
            <field name="billing_period_sale_id" attrs="{'invisible':[('billing_type_sale','!=','recurring')],'required':[('billing_type_sale','=','recurring')]}"/>
            <newline/>
            <field name="billing_unlimited_sale" attrs="{'invisible':[('billing_type_sale','!=','recurring')]}"/>
            <field name="billing_period_nbr_sale" attrs="{'invisible':['|',('billing_type_sale','!=','recurring'),('billing_unlimited_sale','=',True)],'required':[('billing_type_sale','=','recurring')]}"/>
            <field name="billing_result_sale"/>
            <separator string="Billing Defaults - Supplier Contracts" colspan="4"/>
            <field name="billing_type_purchase"/>
            <field name="billing_period_purchase_id" attrs="{'invisible':[('billing_type_purchase','!=','recurring')]}"/>
            <newline/>
            <field name="billing_unlimited_purchase" attrs="{'invisible':[('billing_type_purchase','!=','recurring')],'required':[('billing_type_purchase','=','recurring')]}"/>
            <field name="billing_period_nbr_purchase" attrs="{'invisible':['|',('billing_type_purchase','!=','recurring'),('billing_unlimited_purchase','=',True)],'required':[('billing_type_purchase','=','recurring')]}"/>
          </group>
        </page>
      </notebook>
    </field>
  </record>

